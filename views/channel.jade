extends layout
block content
    h1 #{channel.name}
    section
        ul#messages
            each message in channel.messages
                li
                    span.date #{message.date} &nbsp;
                    span.sender #{message.sender} &nbsp;
                    span.text #{message.text} &nbsp;
    aside
        ul#connectedUsers

    section
        input#addNewMessage(type="text")

    script(src="/scripts/messages.js")
    script(src="/scripts/socket-channel.js")